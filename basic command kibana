#get cluster health
GET _cluster/health

#get nodes details
GET _cat/nodes?v

# get existing indices
GET _cat/indices

#create indeces page
PUT /pages

#get all shards
GET _cat/shards?v

#delete indeces
DELETE /pages


#add indices

PUT /products
{
  "settings": {
    "number_of_replicas": 2,
    "number_of_shards": 1
  }
}


#indexing documents
 
POST /products/_doc
{
    "name":"coffe maker",
    "cost": 12,
    "in_stock":12

}
